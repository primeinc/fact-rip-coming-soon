{
  "name": "fact-rip-coming-soon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc -b && eslint .",
    "check:pnpm": "./scripts/check-npm-usage.sh",
    "check:storage": "./scripts/enforce-storage-pattern.sh",
    "check:timeouts": "./scripts/enforce-no-timeouts.sh",
    "check:all": "pnpm run check:pnpm && pnpm run check:storage && pnpm run check:timeouts",
    "test:all": "pnpm run check:pnpm && pnpm run typecheck && pnpm run test:run && pnpm run test:e2e",
    "ci": "set -e && pnpm run test:all && pnpm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "framer-motion": "^12.12.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "xstate": "^5.19.3"
  },
  "devDependencies": {
    "@action-validator/cli": "^0.6.0",
    "@axe-core/playwright": "^4.10.1",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "glob": "^11.0.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "netlify-cli": "^21.4.2",
    "postcss": "^8.5.3",
    "tailwindcss": "3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}
